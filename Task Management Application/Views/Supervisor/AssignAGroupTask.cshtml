@model Task_Management_Application.Models.ViewModels.AssignAGroupTaskViewModel
@{
    ViewBag.Title = "AssignATask";
    Layout = "~/Views/Shared/_SupervisorLayout.cshtml";
}

<h2 class="text-center">Assign The Task</h2>
<hr />

@using (Html.BeginForm("AssignAGroupTask", "Supervisor"))
{
    <div class="mt-4">
        <div class="form-group row">
            @Html.LabelFor(m => m.Worker1Username, new { @class = "col-form-label col-md-3 font-weight-bold text-right" })
            <div class="col-md-6">
                @Html.TextBoxFor(m => m.Worker1Username, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Worker1Username, "", new { @class = "text-danger" })

            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.Worker2Username, new { @class = "col-form-label col-md-3 font-weight-bold text-right" })
            <div class="col-md-6">
                @Html.TextBoxFor(m => m.Worker2Username, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Worker2Username, "", new { @class = "text-danger" })

            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.Worker3Username, new { @class = "col-form-label col-md-3 font-weight-bold text-right" })
            <div class="col-md-6">
                @Html.TextBoxFor(m => m.Worker3Username, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Worker3Username, "", new { @class = "text-danger" })

            </div>
        </div>
        <div>
            @Html.HiddenFor(m => m.TaskId)
        </div>

        <div class="row mt-4">
            <div class="col-md-3">
            </div>
            <div class="col-md-6">
                <input type="submit" value="Assign" class="btn btn-default w-100" />
            </div>
        </div>
    </div>
}

