@model Task_Management_Application.Models.ViewModels.SetNewDeadlineViewModel
@{
    ViewBag.Title = "SetNewDeadline";
    Layout = "~/Views/Shared/_SupervisorLayout.cshtml";
}

<h2 class="text-center">Set New Deadline</h2>
<hr />

@using (Html.BeginForm("SetNewDeadline", "Supervisor"))
{
    <div class="mt-4">
        <div class="form-group row">
            @Html.LabelFor(m => m.Deadline, new { @class = "col-form-label col-md-3 font-weight-bold text-right" })
            <div class="col-md-6">
                @Html.TextBoxFor(m => m.Deadline, new { @type = "datetime-local", @class = "form-control datepicker" })
                @Html.ValidationMessageFor(m => m.Deadline, "", new { @class = "text-danger" })
                <span class="text-danger">@ViewBag.Message</span>

            </div>
        </div>
        <div>
            @Html.HiddenFor(m => m.TaskId)
        </div>

        <div class="row mt-4">
            <div class="col-md-3">
            </div>
            <div class="col-md-6">
                <input type="submit" value="Set" class="btn btn-default w-100" />
            </div>
        </div>
    </div>
}


