@model Task_Management_Application.Models.TaskLog
@{
    ViewBag.Title = "AddALog";
    Layout = "~/Views/Shared/_WorkerLayout.cshtml";
}

<h2 class="text-center">Add a Log</h2>
<hr />

@using (Html.BeginForm("AddALog", "Worker"))
{
    <div class="mt-4">
        <div class="form-group row">
            @Html.LabelFor(m => m.Title, new { @class = "col-form-label col-md-3 font-weight-bold text-right" })
            <div class="col-md-6">
                @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })

            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.Text, new { @class = "col-form-label col-md-3 font-weight-bold text-right" })
            <div class="col-md-6">
                @Html.TextAreaFor(m => m.Text, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Text, "", new { @class = "text-danger" })

            </div>
        </div>
        <div>
            @Html.HiddenFor(m => m.WorkTaskId)
        </div>

        <div class="row mt-4">
            <div class="col-md-3">
            </div>
            <div class="col-md-6">
                <input type="submit" value="Add" class="btn btn-default w-100" />
            </div>
        </div>
    </div>
}


