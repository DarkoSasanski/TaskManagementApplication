@using Task_Management_Application.Models;
@model Remark
@{
    ViewBag.Title = "AddRemark";
    Layout = Model.Layout;
}

<h2 class="text-center">Add a Remark</h2>
<hr />

@using (Html.BeginForm("AddRemark", "WorkTasks"))
{
    <div class="mt-4">
        <div class="form-group row">
            @Html.LabelFor(m => m.Text, new { @class = "col-form-label col-md-3 font-weight-bold text-right" })
            <div class="col-md-6">
                @Html.TextAreaFor(m => m.Text, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Text, "", new { @class = "text-danger" })

            </div>
        </div>
        <div>
            @Html.HiddenFor(m => m.WorkTaskId)
            @Html.HiddenFor(m => m.Layout)
        </div>

        <div class="row mt-4">
            <div class="col-md-3">
            </div>
            <div class="col-md-6">
                <input type="submit" value="Submit" class="btn btn-default w-100" />
            </div>
        </div>
    </div>
}




